<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:layout="@layout/preferences_category"
        android:title="@string/menu.weekly_view">

        <ListPreference
            android:key="start_view"
            android:title="START VIEW"
            android:summary="@string/summary.start_view"
            android:entries="@array/entries_start_view"
            android:entryValues="@array/entry_values_start_view"
            android:defaultValue="@string/entry_start_view_default"
            android:dialogTitle="select view"/>

        <MultiSelectListPreference
            android:key="display_day_of_week"
            android:title="DISPLAY DAY OF WEEK"
            android:summary="@string/summary.display_day_of_week"
            android:entries="@array/entries_day_of_week"
            android:entryValues="@array/entry_values_day_of_week"
            android:dialogTitle="select display days"/>

        <ListPreference
            android:key="@string/key.first_day_of_week"
            android:title="@string/title.first_day_of_week"
            android:summary="@string/summary.first_day_of_week"
            android:entries="@array/entries_day_of_week_full_name"
            android:entryValues="@array/entry_values_day_of_week"
            android:dialogTitle="@string/summary.first_day_of_week"
            android:defaultValue="@string/default.value.first_day_of_week"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/preferences_category"
        android:title="@string/preference.category.lesson_week_view">

        <jp.manavista.lessonmanager.view.preference.NumberPickerPreference
            android:key="@string/preferences.key.display_start_time"
            android:title="@string/preferences.title.display_start_time"
            android:summary="@string/preferences.summary.display_start_time"
            app:minValue="0"
            app:maxValue="23"
            android:defaultValue="9" />

        <jp.manavista.lessonmanager.view.preference.NumberPickerPreference
            android:key="@string/preferences.key.display_end_time"
            android:title="@string/preferences.title.display_end_time"
            android:summary="@string/preferences.summary.display_end_time"
            app:minValue="0"
            app:maxValue="23"
            android:defaultValue="21" />

    </PreferenceCategory>

</PreferenceScreen>