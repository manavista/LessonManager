<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_member_lesson"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <ImageView
        android:id="@+id/lesson_icon_image"
        android:src="@drawable/ic_event_note_black"
        android:background="@drawable/circle"
        android:alpha="0.6"
        android:contentDescription="member lesson icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:paddingStart="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/margin_16dp"
        android:paddingStart="0dp"
        android:paddingTop="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/lesson_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:text="Lesson Name"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/lesson_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_toEndOf="@+id/lesson_name"
                android:layout_centerVertical="true"
                android:text="lesson type"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/day_of_week_icon_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:contentDescription="day_of_week_icon_image"
                android:src="@drawable/ic_event_black"/>

            <TextView
                android:id="@+id/day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_toEndOf="@+id/day_of_week_icon_image"
                android:text="Day of Week"/>

            <ImageView
                android:id="@+id/timetable_image_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_toEndOf="@+id/day_of_week"
                android:alpha="0.6"
                android:contentDescription="timetable_image_icon"
                android:src="@drawable/ic_schedule_black"/>

            <TextView
                android:id="@+id/timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_toEndOf="@+id/timetable_image_icon"
                android:text="17:00 - 18:30"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <ImageButton
            android:id="@+id/expand_icon_image"
            android:layout_width="42dp"
            android:layout_height="72dp"
            android:alpha="0.6"
            android:background="@color/bpTransparent"
            android:contentDescription="expand"
            android:gravity="end"
            android:src="@drawable/ic_expand_more_black"/>

        <ImageButton
            android:id="@+id/filter_icon_image"
            android:layout_width="40dp"
            android:layout_height="72dp"
            android:alpha="0.6"
            android:paddingEnd="@dimen/margin_16dp"
            android:background="@color/bpTransparent"
            android:contentDescription="filter"
            android:gravity="end"
            android:src="@drawable/ic_filter_list_black"/>

    </LinearLayout>




</LinearLayout>